    <constant name="struts.custom.i18n.resources" value="global"/>
    <package name="default" namespace="/" extends="struts-default">

        <result-types>
            <result-type name="tiles" class="org.apache.struts2.views.tiles.TilesResult"/>
        </result-types>

        <interceptors>
            <!--LoginIntercepter-->
            <interceptor name="loginInterceptor" class="am.gitc.mportal.action.Authentication">
            </interceptor>
            <!--loginStack-->
            <interceptor-stack name="loginStack">
                <interceptor-ref name="loginInterceptor"/>
                <interceptor-ref name="defaultStack"/>
            </interceptor-stack>

        </interceptors>


        <action name="home" class="am.gitc.mportal.action.GlobalAction">
            <result name="success" type="tiles">mentee.view</result>
        </action>

        <action name="register" class="am.gitc.mportal.action.ViewPageAction" method="register">
            <result name="register" type="tiles">register.view</result>
        </action>
        <action name="login" class="am.gitc.mportal.action.ViewPageAction" method="login">
            <result name="login" type="tiles">login.view</result>
        </action>

        <action name="loginForm" class="am.gitc.mportal.action.LoginAction">
            <result name="mentee" type="tiles">dashboard.view</result>
            <!--<result name="mentor" type="tiles">mentor.view</result>-->
            <result name="input" type="tiles">login.view</result>
            <result name="login" type="tiles">login.view</result>
        </action>

        <action name="registerForm" class="am.gitc.mportal.action.RegistrationAction">
            <result name="success" type="tiles">login.view</result>
            <result name="input" type="tiles">register.view</result>
            <result name="error" type="tiles">mentee.view</result>
        </action>

        <action name="activate" class="am.gitc.mportal.action.RegistrationAction" method="activateProfile">
            <result name="login">/page/urlError.jsp</result>
            <result name="success" type="tiles">login.view</result>
        </action>

    </package>


</struts>