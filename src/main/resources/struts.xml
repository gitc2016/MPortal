<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>


    <!--<constant name="struts.custom.i18n.resources" value="package"/>-->
    <!--<package name="default" namespace="/" extends="struts-default">-->
    <constant name="struts.custom.i18n.resources" value="global"/>
    <package name="default" namespace="/" extends="struts-default">
        <interceptors>

            <!--LoginIntercepter-->
            <interceptor name="loginInterceptor" class="am.gitc.mportal.action.Authentication">
            </interceptor>
            <!--loginStack-->
            <interceptor-stack name="loginStack">
                <interceptor-ref name="loginInterceptor"/>
                <interceptor-ref name="defaultStack"/>
            </interceptor-stack>


        </interceptors>


        <action name="login">
            <result>/pages/loginForm.jsp</result>
        </action>

        <action name="registration">
            <result>/pages/registerForm.jsp</result>
        </action>

        <!--LoginActionPage-->
        <action name="loginForm" class="am.gitc.mportal.action.LoginAction">
            <result name="success">/pages/choosePage.jsp</result>
            <result name="input">/pages/loginForm.jsp</result>
            <result name="login">/pages/loginForm.jsp</result>
        </action>

        <action name="searchForm" class="am.gitc.mportal.action.SearchAction">
            <result name="success">/pages/menteeDashboard.jsp</result>
            <result name="input">/pages/menteeDashboard.jsp</result>
        </action>

        <action name="searchKeyword" class="am.gitc.mportal.action.SearchAction" method="advancedSearch">
            <result name="success">/pages/menteeDashboard.jsp</result>
            <result name="input">/pages/menteeDashboard.jsp</result>
        </action>

        <!--RegisterActionPage-->
        <action name="registerForm" class="am.gitc.mportal.action.RegistrationAction">
            <result name="success">/pages/loginForm.jsp</result>
            <result name="input">/pages/registerForm.jsp</result>
            <result name="error">/pages/error.jsp</result>
        </action>


        <action name="activate" class="am.gitc.mportal.action.RegistrationAction" method="activateProfile">
            <result name="login">/pages/urlError.jsp</result>
            <result name="success">/pages/loginForm.jsp</result>
        </action>


        <action name="logOut" class="am.gitc.mportal.action.LogOutAction">
            <result name="success">/pages/loginForm.jsp</result>
        </action>

        <action name="deleteAccount" class="am.gitc.mportal.action.DeleteAcountAction">
            <result name="success">/pages/registerForm.jsp</result>
        </action>

        <action name="mentorpage" class="am.gitc.mportal.action.UserAction" method="mentor">
            <result name="success">/pages/mentorDashboard.jsp</result>
        </action>

        <action name="menteepage" class="am.gitc.mportal.action.UserAction">
            <result name="success">/pages/menteeDashboard.jsp</result>
            <result name="input">/pages/loginForm.jsp</result>
        </action>


        <action name="global" class="am.gitc.mportal.action.GlobalAction">
            <result name="success">/pages/loginForm.jsp</result>
        </action>


        <action name="mentor">
            <interceptor-ref name="loginStack"/>
            <result name="input">/pages/loginForm.jsp</result>
            <result name="success">/pages/mentorDashboard.jsp</result>
        </action>

        <action name="locale">
            <result>/pages/loginForm.jsp</result>
        </action>

        <action name="request" class="am.gitc.mportal.action.RequestAction">
            <result name="success">/pages/menteeDashboard.jsp</result>
        </action>

    </package>
</struts>